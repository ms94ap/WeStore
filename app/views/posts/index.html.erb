<h2>Your Posts</h2>


  <li>
    <% @posts.each do |post| %>

    <div id="post-<%= post.id %>"><%= link_to post.title, user_post_path(post.user, post)%></div>
    <button class="js-more" data-id="<%= post.id %>">More Info</button>
    <%= link_to 'Delete Post', {controller: :posts, action: "destroy", id: post.id}, :method => :delete, :confirm => "Are you sure?" %> <br>
    <% end %>
  </li>
   



<script type="text/javascript" charset="utf-8">

$(function() {
  $(".js-more").on("click", function() {
    var id = $(this).data("id");
 $.get("/posts/" + id + "/posts", function(data){
  $(".productName").text(data["product"]["name"]);
      $("#body-" + id).text(data);
    });
  });
});
</script>












	
	

