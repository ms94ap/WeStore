<h2>Your Posts</h2>

<div class="posts-index">

  <% @posts.each do |post| %>
  <%= link_to post.title, user_post_path(post.user, post)%>

</div>
	<%= link_to 'Delete Post', {controller: :posts, action: "destroy", id: post.id}, :method => :delete, :confirm => "Are you sure?" %> <br>
	<% end %>

<div>
  <%= link_to "New post", new_user_post_path%>
</div>
