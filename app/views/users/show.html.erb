<h1>Your Profile</h1>
    <h4>Name: <%= @user.name  %><h4>
    <p>Email: <%= @user.email %></p>
    <p>Country: <%= @user.country %></p>
    <br>
<h3>Your listings:</h3>
    <% @user.posts.each do |post| %>
      <%= link_to post.name, user_posts_path(@user)%>
   <%end %>



<h4>To edit your account please click <%= link_to "here", edit_user_path %></h4>
<h4>To log out please click <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></h4>
